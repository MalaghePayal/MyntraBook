@model Company

<div class="card shadow border-0 my-4">
<div class="card-header bg-secondary bg-gradient ml-0 py-3"> </div>
<div class="row">
    <div class="col-12 text-center">
            <h2>
                @(Model.Id != 0 ? "Update" : "Create") Company
            </h2>
    </div>
</div>
</div>
<div class="card-body p-4">
<form class="row" asp-controller="Company" asp-action="Upsert" method="post" enctype="multipart/form-data">
    <input  asp-for="Id" hidden/>
        
        <div class="row pb-2">
            <div class="col-12">
                <div class="border p-3 mt-4">

                    <div asp-validation-summary="All">
                    </div>

                    <div class="mb-3 row p-2">
                        <label class="p-0" asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row p-2">
                        <label class="p-0" asp-for="StreetAdress">StreetAdress</label>
                        <input asp-for="StreetAdress" class="form-control" />
                        <span asp-validation-for="StreetAdress" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row p-2">
                        <label class="p-0" asp-for="City">City</label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row p-2">
                        <label class="p-0" asp-for="State">State</label>
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row p-2">
                        <label class="p-0" asp-for="PostalCode">Postal Code</label>
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row p-2">
                        <label class="p-0" asp-for="PhoneNumber">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                   
                   
                    <div class="row">
                        @if (Model.Id != 0)
                        {
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary">Update Company</button>
                            </div>

                        }
                        else
                        {
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary">Create Company</button>
                            </div>
                        }

                        <div class="col-6 col-md-3">
                            <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List </a>
                        </div>
                    </div>

                </div>
            </div>
           
        </div>
   
</form>
</div>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}