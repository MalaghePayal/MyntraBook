@model Product


<form asp-controller="Product" asp-action="Edit" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Update Product</h2>
            <hr />

        </div>
        <div asp-validation-summary="All">
        </div>
       
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="ISBN">ISBN</label>
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Author">Author</label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="ListPrice">ListPrice</label>
            <input asp-for="ListPrice" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Price1to50">Price1to50</label>
            <input asp-for="Price1to50" class="form-control" />
            <span asp-validation-for="Price1to50" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Price50to100">Price50to100 </label>
            <input asp-for="Price50to100" class="form-control" />
            <span asp-validation-for="Price50to100" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Price100">Price100</label>
            <input asp-for="Price100" class="form-control" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>



    </div>
</form>
@section scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}