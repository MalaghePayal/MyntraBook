@model Product


<form asp-controller="Product" asp-action="Delete" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Product</h2>
            <hr />

        </div>
        <div asp-validation-summary="All">
        </div>

        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Title">Title</label>
            <input disabled asp-for="Title" class="form-control" />
            
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Description">Description </label>
            <input disabled asp-for="Description" class="form-control" />
            
        </div>

        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="ISBN">ISBN</label>
            <input asp-for="ISBN" class="form-control" />
           
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Author">Author</label>
            <input asp-for="Author" class="form-control" />
            
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="ListPrice"></label>
            <input asp-for="ListPrice" class="form-control" />
           
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Price1to50"></label>
            <input asp-for="Price1to50" class="form-control" />
            
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Price50to100"></label>
            <input asp-for="Price50to100" class="form-control" />
           
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Price100"></label>
            <input asp-for="Price100" class="form-control" />
         
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger">Delete Product</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List </a>
            </div>
        </div>



    </div>
</form>
