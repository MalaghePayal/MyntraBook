@model Category


<form asp-controller="Category" asp-action="Delete" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Category</h2>
            <hr />

        </div>
        <div asp-validation-summary="All">
        </div>

        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="Name">Category Name</label>
            <input disabled asp-for="Name" class="form-control" />
            
        </div>
        <div class="mb-3 row p-2">
            <label class="p-0" asp-for="DisplayOrder">Display Order</label>
            <input disabled asp-for="DisplayOrder" class="form-control" />
            
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger">Delete Category</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List </a>
            </div>
        </div>



    </div>
</form>
